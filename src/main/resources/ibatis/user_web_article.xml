<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE sqlMap       
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"       
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="user_web_article">
	
	<resultMap id="articleResult" class="com.feetao.web.model.UserWebArticleDO">
		<result property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="title" column="title" />
		<result property="description" column="description" />
		<result property="picUrl" column="picUrl" />
		<result property="url" column="url" />
		<result property="detail" column="detail" />
		<result property="status" column="status" />
		<result property="gmtCreate" column="gmt_create" />
		<result property="gmtModified" column="gmt_modified" />
	</resultMap>
	
	<select id="getForward" resultMap="articleResult" parameterClass="java.util.Map">
		<![CDATA[
		select * from user_web_article where user_id=#userId# and status=#status# and gmt_create < #cursor# order by gmt_create desc limit #size#;
		]]>
	</select>
	
	<select id="getBack" resultMap="articleResult" parameterClass="java.util.Map">
		<![CDATA[
		select * from user_web_article where user_id=#userId# and status=#status# and gmt_create > #cursor# order by gmt_create limit #size#;
		]]>
	</select>
	
	<select id="getArticleById" resultMap="articleResult" parameterClass="java.util.Map">
		select * from user_web_article where id=#id# and status=#status#;
	</select>
	
</sqlMap>  