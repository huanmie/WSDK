<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMember">
	<resultMap id="baseResult" type="MemberDO">
		<result property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="openId" column="open_id" />
		<result property="name" column="name" />
		<result property="memberCode" column="member_code" />
		<result property="score" column="score" />
		<result property="lastEnter" column="last_enter" />
		<result property="status" column="status" />
		<result property="gmtCreate" column="gmt_create" />
		<result property="gmtModified" column="gmt_modified" />
	</resultMap>

	<select id="getMemberByOpenIdAndUserId" resultMap="baseResult" parameterType="java.util.Map">
		select * from user_web_member where open_id=#{openId} and user_id=#{userId}
	</select>	
	
	<insert id="addMember" parameterType="MemberDO">
		insert into user_web_member(user_id,open_id,name,member_code,score,last_enter,status,gmt_create,gmt_modified) 
		values(#{userId},#{openId},#{name},#{memberCode},#{score},#{lastEnter},#{status},#{gmtCreate},#{gmtModified})
	</insert>
	
	<update id="updateMember" parameterType="MemberDO">
		update user_web_member set last_enter=#{lastEnter}
		<if test="name!=null">
			,name = #{name}
		</if>
		<if test="memberCode!=null">
			,member_code = #{memberCode}
		</if>
		<if test="score!=null">
			,score = #{score}
		</if>
		<if test="gmtModified">
			,gmt_modified = #{gmtModified}
		</if>
		where user_id=#{userId} and open_id=#{openId}
	</update>
	
</mapper>  